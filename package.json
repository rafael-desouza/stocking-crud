  "scripts": {
    "dev": "set NODE_ENV=development&& tsnd -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify ./src/index.ts",
    "test": "set NODE_ENV=test&& jest --i --no-cache --verbose --runInBand --bail",
    "build": "yarn build:babel&&yarn build:copy",
    "build:babel": "set BABEL_ENV=build&& set NODE_ENV=production&& babel src --extensions \".ts\" --out-dir dist --source-maps --copy-files --no-copy-ignored --delete-dir-on-start --no-comments",
    "build:copy": "copy package.json dist",
    "lint": "eslint src --max-warnings=0"
  },
